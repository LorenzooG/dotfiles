{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
  "workbench.productIconTheme": "feather-vscode",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.activityBar.visible": false,

  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",

  "security.workspace.trust.untrustedFiles": "open",
  "git.confirmSync": false,

  "editor.fontSize": 15.6,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120, 160],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "editor.suggestSelection": "first",
  "editor.lineNumbers": "relative",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "JSX",
        "scope": ["entity.name.namespace"],
        "settings": {
          "foreground": "#80CBC4"
        }
      },
      // you might also want to set this for polymorphic variants
      {
        "name": "other",
        "scope": ["punctuation.definition.keyword"],
        "settings": {
          "foreground": "#f87086"
        }
      }
    ]
  },

  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",

  "customizeUI.font.regular": "JetBrainsMono Nerd Font",
  "customizeUI.font.monospace": "JetBrainsMono Nerd Font",

  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "files.autoSave": "off",
  "files.associations": {
    ".huskyrc": "json"
  },
  "files.exclude": {
    "**/.next": true,
    "**/.idea": true,
    "**/.git": true,
    "**/.spago": true,
    "**/node_modules": true,
    "**/build": true,
    "**/.gradle": true,
    "**/*.bs.js": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.ibc": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.visualstar": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    }
  ],
  "vim.handleKeys": {
    "<C-g>": true,
    "<C-a>": false,
    "<C-f>": false,
    "<C-p>": false,
    "<C-y>": false
  },

  "javascript.updateImportsOnFileMove.enabled": "always",

  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,

  "reason_language_server.reloadOnChange": true,

  "emmet.includeLanguages": {
    "rescript": "javascriptreact"
  },

  "[rust]": {
    "editor.tabSize": 4,
    "editor.rulers": [100]
  },

  "[haskell]": {
    "editor.defaultFormatter": "haskell.haskell"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
